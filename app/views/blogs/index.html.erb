<div class="container">
  <div class="row">
    <h1>blog index<h1>
  </div>
  <% @blogs.each do |blog| %>
    <div class="card m-3 p-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= link_to blog_path(blog.id) do %>
            <%= attachment_image_tag blog, :image, format: 'jpeg', size: "300x300" %>
        </div>
      <div class="col-md-8">
        <div class="card-body">
          <div class="card-title">
            <div class="b-title">
              <%= blog.title %>
            </div>
          <% end %><br>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
    <ul>
      <li><i class="far fa-user"></i>By<%= blog.user.name %></li>
      <li><i class="far fa-comments"></i><%= blog.blog_comments.count %></li>
      <li><i class="far fa-heart"></i><%= blog.likes.count %></li>
    </ul>
  <% end %>
  <%= paginate @blogs %>
</div>