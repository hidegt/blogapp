<% blogs.each do |blog| %>
  <div class="card shadow p-3 mb-5 bg-white rounded">
  <div class="row no-gutters">
    <div class="col-md-4">
  <%= link_to blog_path(blog.id), class:"stretched-link" do %>
      <%= attachment_image_tag blog, :image, format: 'jpeg', size: "300x300", class: "card-img" %>
    </div>
    <div class="col-md-6 position-static p-4 pl-md-0">
  <% end %>
      <div class="card-body"><h2 class="b-title p-3 text-muted"><em><%= blog.title %></em></h2>
          <span class="text-muted"><i class="far fa-calendar-alt"></i><%= blog.created_at.strftime('%Y/%m/%d') %></span>
        <p class="card-text offset-2">
          <i class="far fa-comments"></i><%= blog.blog_comments.count %>
          <i class="far fa-heart"></i><%= blog.likes.count %>
        </p>
      </div>
    </div>
  </div>
  </div>
<% end %>