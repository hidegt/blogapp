<div class="container">
  <div class="row justify-content-center m-3 p-3">
    <% if @user != current_user %>
      <h1>Welcome to <%= @user.name %>'s page  <span><i class="fas fa-paper-plane"></i></span></h1>
    <% else %>
      <h1>My page  <span><i class="fas fa-paper-plane"></i></span><h1>
    <% end %>
  </div>
  <%= render 'users/page', blogs: @blogs %>
</div>

<%= paginate @blogs %>

<div class="profile-container">
<h2>Author</h2>
  <h3 class="profile-name">Name:<%= @user.name %></h3>
  <h3 class="profile-introduction">Introduction:<h3>
  <%= simple_format(@user.introduction) %>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", class:"img-circle", fallback: "no_image.jpg" %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "edit profile",edit_user_path(@user) %>
  <% end %>
</div>