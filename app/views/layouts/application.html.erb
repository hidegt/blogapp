<!DOCTYPE html>
<html>
  <head>
    <title>Blogapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/404e462280.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
        <% if user_signed_in? %>
          <li>
            <%= link_to "Home", blogs_path %>
          </li>
          <li>
            <%= link_to "New post", new_blog_path %>
          </li>
          <li>
            <%= link_to "My page", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        <%  else %>
          <li>
            <%= link_to "Home", root_path %>
          </li>
          <li>
            <%= link_to "About", home_about_path %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path %>
          </li>
          <li>
            <%= link_to "Log in", new_user_session_path %>
          </li>
        <% end %>
        </ul>
      </nav>
    </header>

    <div class="body">
      <% flash.each do |key,value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    <%= yield %>
  </body>
</html>
